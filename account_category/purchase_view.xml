<?xml version="1.0"?>
<openerp>
<data>

    <record id="category_purchase_order_form" model="ir.ui.view">
        <field name="name">category_purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr='//field[@name="order_line"]/tree//field[@name="name"]' position='after'>
                <field name="category_id" on_change="onchange_category_id(category_id)" domain="[('type','=','expense')]"
                        options="{'create': false, 'create_edit': false}"/>
                <field name="account_id" domain="[('category_ids','=',category_id)]"
                    options="{'create': false, 'create_edit': false}"/>
            </xpath>
            <xpath expr='//field[@name="order_line"]/tree//field[@name="account_analytic_id"]' position='replace'>
                <field name="account_analytic_id" domain="[('category_ids','=',category_id)]"
                    options="{'create': false, 'create_edit': false}"/>
            </xpath>

        </field>
    </record>

</data>
</openerp>
