<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <!-- Set default wage liability account -->
        <record id="imsar_config_hr_timesheet_wage_account" model="hr.config.settings">
            <field name="wage_account_id" ref="imsar_accounting.payroll_liabilities" />
        </record>
        <record id="base.main_company" model="res.company">
            <field name="wage_account_id" ref="imsar_accounting.payroll_liabilities" />
        </record>

        <!-- Set default timesheet journal -->
        <record id="imsar_config_hr_timesheet_journal" model="hr.config.settings">
            <field name="general_journal_id" ref="imsar_accounting.timekeeping_journal" />
        </record>
        <record id="base.main_company" model="res.company">
            <field name="general_journal_id" ref="imsar_accounting.timekeeping_journal" />
        </record>

        <!-- Set default regular worktype -->
        <record id="imsar_config_hr_regular_worktype" model="hr.config.settings">
            <field name="regular_worktype_id" eval="ref('worktype_regular')" />
        </record>
        <record id="base.main_company" model="res.company">
            <field name="regular_worktype_id" eval="ref('worktype_regular')" />
        </record>

        <!-- Set default overtime worktype -->
        <record id="imsar_config_hr_overtime_worktype" model="hr.config.settings">
            <field name="overtime_worktype_id" eval="ref('worktype_ovetime')" />
        </record>
        <record id="base.main_company" model="res.company">
            <field name="overtime_worktype_id" eval="ref('worktype_ovetime')" />
        </record>


    </data>
</openerp>
