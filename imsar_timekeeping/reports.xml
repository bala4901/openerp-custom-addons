<openerp>
<data>
    <!-- Currently not being used because we'll want timesheet reports in CSV files -->
    <report
        id="timekeeping_overview"
        model="hr.timekeeping.sheet"
        string="Timekeeping Overview"
        name="imsar_timekeeping.overview_view"
        file="imsar_timekeeping.overview_view"
        report_type="qweb-pdf"/>

    <template id="overview_view">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="sheet">
                <t t-call="report.external_layout">
                    <div class="page">
                        <h2 t-field="sheet.name"/> for <h2 t-field="sheet.employee_id"/>
                        <p>Total hours: <span t-field="sheet.total_time"/></p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</data>
</openerp>