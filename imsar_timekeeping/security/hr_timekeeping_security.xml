<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <!-- Group for users allowed to make edits to other people's timesheets -->
        <record id="imsar_timekeeping.group_tk_proxy_user" model="res.groups">
            <field name="name">Timekeeping Proxy Users</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">This user will be able to edit other employee's timesheets (for a limited number of task codes).</field>
        </record>

        <!-- Group for Project Managers -->
        <record id="imsar_timekeeping.group_pms_user" model="res.groups">
            <field name="name">Project Managers</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">This user will be able to edit authorized users on contracts and projects.</field>
        </record>

    </data>
</openerp>
