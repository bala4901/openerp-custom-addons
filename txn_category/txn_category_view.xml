<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="txn_category_line_search" model="ir.ui.view">
            <field name="name">account.txn.category.search</field>
            <field name="model">account.txn.category</field>
            <field name="arch" type="xml">
                <search string="Txn Categories">
                    <field name="name"/>
                    <group expand="0" string="Group By...">
                        <filter string="Contains real account" icon="terp-folder-green" domain="[]" context="{'group_by':'account_ids'}"/>
                        <filter string="Contains analytic account" icon="terp-folder-green" domain="[]" context="{'group_by':'analytic_ids'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="txn_category_tree" model="ir.ui.view">
            <field name="name">account.txn.category.tree</field>
            <field name="model">account.txn.category</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Transaction Categories" version="7.0" class="txn_category">
                    <field name="name"/>
                    <field name="account_count"/>
                    <field name="analytic_count"/>
                </tree>
            </field>
        </record>
        <record id="txn_category_form" model="ir.ui.view">
            <field name="name">account.txn.category.form</field>
            <field name="model">account.txn.category</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Transaction Categories" version="7.0" >

                    <table>
                        <tr>
                            <td>
                                <label for="name" string="Category Name: " class="oe_inline" />
                                <field name="name" class="oe_inline" style="font-size: 200"/>
                            </td>
                        </tr>
                        <tr>
                            <td width="45%%">
                                <label for="account_ids" />
                                <field name="account_ids" widget="many2many_list" domain="[('type','!=','view')]">
                                    <tree>
                                        <field name="code" />
                                        <field name="name" />
                                    </tree>
                                </field>
                            </td>
                            <td width="10%%"></td>
                            <td width="45%%">
                                <label for="account_ids" />
                                <field name="analytic_ids" widget="many2many_list"
                                       domain="[('state','in',('draft','open')),('type','in',('normal','contract'))]">
                                    <tree>
                                        <field name="name" />
                                        <field name="parent_id" />
                                    </tree>
                                </field>
                            </td>
                        </tr>
                    </table>

                </form>
            </field>
        </record>

        <record id="txn_category_view_form" model="ir.actions.act_window">
            <field name="name">Transaction Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.txn.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="txn_category_form"/>
            <field name="search_view_id" ref="txn_category_line_search"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create new transaction category.
              </p><p>
                Description here.
              </p>
            </field>
        </record>
        <record id="action_txn_category_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="txn_category_view_form"/>
        </record>
        <record id="action_txn_category_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="txn_category_form"/>
            <field name="act_window_id" ref="txn_category_view_form"/>
        </record>

        <menuitem id="menu_txn_category_view" action="txn_category_view_form" parent="account.account_account_menu" sequence="20" />




    </data>
</openerp>
