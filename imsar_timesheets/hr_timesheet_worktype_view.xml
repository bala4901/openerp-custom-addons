<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="hr_timesheet_worktype_tree" model="ir.ui.view">
            <field name="name">hr.timesheet.worktype.tree</field>
            <field name="model">hr.timesheet.worktype</field>
            <field name="arch" type="xml">
                <tree string="Timesheet Work types">
                    <field name="name" />
                    <field name="active" />
                    <field name="premium_rate" />
                    <field name="nonexempt_limit" />
                    <field name="nonexempt_limit_ignore_ids" widget='many2many_tags' string="Limit Ignores These:"
                            options="{'create': false, 'create_edit': false}"/>
                </tree>
            </field>
        </record>
        <record id="hr_timesheet_worktype_form" model="ir.ui.view">
            <field name="name">hr.timesheet.worktype.form</field>
            <field name="model">hr.timesheet.worktype</field>
            <field name="arch" type="xml">
                <form string="Timesheet Work types">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="active" />
                                <field name="premium_rate" />
                                <field name="nonexempt_limit" />
                            </group>
                            <group>
                                <field name="nonexempt_limit_ignore_ids" string="Limit Ignores These:">
                                    <tree>
                                        <field name="name" string="Analytic Account" />
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_timesheet_worktype_view" model="ir.actions.act_window">
            <field name="name">Timesheet Work types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.timesheet.worktype</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" eval="hr_timesheet_worktype_tree"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create timesheet worktypes and premium multipliers.
              </p><p>
                Worktypes can add premium multipliers, which are additions to base pay, such as overtime for non-exempt employees or
                danger pay in war zones.
              </p>
            </field>
        </record>
        <record id="action_hr_timesheet_worktype_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="hr_timesheet_worktype_view"/>
        </record>
        <record id="action_hr_timesheet_worktype_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_timesheet_worktype_form"/>
            <field name="act_window_id" ref="hr_timesheet_worktype_view"/>
        </record>

        <menuitem id="menu_hr_timesheet_worktype" action="hr_timesheet_worktype_view" parent="hr.menu_hr_configuration" sequence="50" />

    </data>
</openerp>
