<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="imsar_hr_timehseet_config_settings" model="ir.ui.view">
            <field name="name">hr settings for imsar timesheets</field>
            <field name="model">hr.config.settings</field>
            <field name="inherit_id" ref="hr.view_human_resources_configuration"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='hr_timesheet']" position="after">
                    <div>
                        <label for="general_journal_id" attrs="{'invisible': [('module_hr_timesheet_sheet','=',False)]}"/>
                        <field name="general_journal_id" class="oe_inline" options="{'create': false, 'create_edit': false}"
                               attrs="{'invisible': [('module_hr_timesheet_sheet','=',False)],'required': [('module_hr_timesheet_sheet','=',True)]}"
                                widget="selection"/>
                    </div>
                    <div>
                        <label for="regular_worktype_id" attrs="{'invisible': [('module_hr_timesheet_sheet','=',False)]}"/>
                        <field name="regular_worktype_id" class="oe_inline" options="{'create': false, 'create_edit': false}"
                               attrs="{'invisible': [('module_hr_timesheet_sheet','=',False)],'required': [('module_hr_timesheet_sheet','=',True)]}"
                                widget="selection"/>
                    </div>
                    <div>
                        <label for="overtime_worktype_id" attrs="{'invisible': [('module_hr_timesheet_sheet','=',False)]}"/>
                        <field name="overtime_worktype_id" class="oe_inline" options="{'create': false, 'create_edit': false}"
                               attrs="{'invisible': [('module_hr_timesheet_sheet','=',False)],'required': [('module_hr_timesheet_sheet','=',True)]}"
                                widget="selection"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
